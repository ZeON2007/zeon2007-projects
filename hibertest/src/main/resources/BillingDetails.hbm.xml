<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
        schema="hibertest"
        package="by.pvt.herzhot.pojos.inheritance"
>
    <class
            name="BillingDetails"
            table="BILLING_DETAILS"
    >
        <id name="id"
            column="BILLING_DETAILS_ID"
            type="integer">
            <generator class="native"/>
        </id>
        <property
                name="owner"
                column="OWNER"
                type="string"/>
        <joined-subclass
                name="CreditCard"
                table="CREDIT_CARD">
            <key column="CREDIT_CARD_ID"/>
            <property name="cardNumber" column="CARD_NUMBER"/>
            <property name="expMonth" column="EXP_MONTH"/>
            <property name="expYear" column="EXP_YEAR"/>
        </joined-subclass>
        <joined-subclass
                name="BankAccount"
                table="BANK_ACCOUNT">
            <key column="BANK_ACCOUNT_ID"/>
            <property name="account" column="ACCOUNT"/>
            <property name="bankname" column="BANK_NAME"/>
            <property name="swift" column="SWIFT"/>
        </joined-subclass>

    </class>
</hibernate-mapping>